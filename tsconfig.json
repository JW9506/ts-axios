{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "module": "es2015",
    "outDir": "dist/lib",
    "declarationDir": "dist/types",
    "sourceMap": true,
    "strict": true,
    "declaration": true, 
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src"]
}